@model IEnumerable<Movie.Models.Showtime>
@using Movie.Models;
@{
    List<Film> film = ViewBag.Film;
}
<link href="~/Content/User/css/ImageTrailer.css" rel="stylesheet" />
<div id="FilmContent" class="row">
    @foreach (var item in film)
    {

        <div class="col-md-12">
            <div class="col-md-4">
                @*<img class="img-responsive border-radius-20" alt="" src="@item.Image" width="300" height="400">*@
                <ul class="thumb">
                    <li>
                        <div class="overlay">
                            <button class="playWrapper" role="button" data-toggle="modal" data-target="#trailerModal" onclick="Trailer('@item.TrailerUrl','@item.Name')"></button>
                            <img class="thumbnail" src="@item.Image" width="300" height="400" alt="">


                        </div>
                    </li>
                </ul>
            </div>
            <div class="col-md-8">
                <h1><a href="#">@item.Name</a></h1>
                <ul class="blog-info" style="list-style-type:none;">
                    <li><i class="fa fa-tags"></i>@item.Category.Name</li>
                    <li><i class="fa fa-clock-o"></i>@item.Duration</li>
                </ul>
                <div class="row">
                    @foreach (var item1 in Model)
                    {
                        if (item.FilmId == item1.FilmId)
                        {
                            <div class="col-lg-2 col-md-5 col-sm-5 col-xs-7 margin-xs-bottom-10 text-center">
                                <a style="width: 100%" id="info-film" class="btn btn-default show-in fancybox-fast-view" 
                                   film-id="@item1.FilmId" film-name ="@item.Name" film-queue ="@item1.Queue"
                                   data-toggle="modal" data-target="#myModalInfo" onclick="bookSeat(@item.FilmId,@item.Name,@item1.Queue,@item1.RoomId)">@item1.Queue</a>
                                <div class="font-smaller padding-top-5">@item1.Room.SeatCount</div>
                            </div>
                        }

                    }


                </div>
            </div>
        </div>

    }
    &nbsp;
</div>
<div class="modal fade" id="myModalInfo" role="dialog">
    <div class="modal-dialog">

        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Bạn Đang Đặt Vé Xem Phim</h4>
            </div>
            <div class="modal-body">
                <label>Naruto</label>
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>Rạp chiếu</th>
                            <th>Ngày chiếu</th>
                            <th>Giờ chiếu</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td id="cinema-name">2</td>
                            <td id="datetime-name">3</td>
                            <td id="showtime-name">4</td>
                        </tr>
                    </tbody>
                </table>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary" data-dismiss="modal">Đồng ý</button>
            </div>
        </div>

    </div>
</div>



